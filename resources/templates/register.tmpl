<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <title>Register account</title>
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
  </head>
  <body>
      <div id="register_area" class="container">
          <div class="col-lg-12">
              <form action="/register/complete?next={{.Next}}" method="GET">
                  <h3 for="summoner">Please Enter your Ign: </h3>
                  <div class="input-group">
                      <input type="text" name="summoner" placeholder="Ign" class="form-control" />
                  </div>
                  <h3 for="team">Please Enter your Ign: </h3>
                  <div class="input-group">
                      <input type="text" name="team" placeholder="Team Name" class="form-control" />
                      <span class="input-group-btn">
                          <input type="submit" value="Submit" class="btn btn-success" />
                      </span>
                  </div>
              </form>
          </div>
      </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="/public/js/bootstrap.min.js"></script>
  </body>
</html>
